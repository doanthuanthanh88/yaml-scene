{
  "name": "yaml-scene",
  "version": "1.0.14",
  "description": "Platform to do everything with only yaml scenario files",
  "keywords": [
    "yaml",
    "scene",
    "tool",
    "api",
    "scenario",
    "test",
    "rest",
    "debug",
    "dev"
  ],
  "main": "src",
  "preferGlobal": true,
  "bin": {
    "yas": "./bin/cli.js",
    "yaml-scene": "./bin/cli.js"
  },
  "scripts": {
    "build:docker": "yarn build && yarn install:dist && cp README.docker.md dist/README.md",
    "install:dist": "yarn install --production --modules-folder ./dist/node_modules",
    "dev": "npx nodemon --watch src --watch test --ext .ts --exec 'node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js --inspect-brk src/index.ts'",
    "start": "node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts",
    "test": "npx jest --detectOpenHandles",
    "schema": "node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts ./scenes/generate_schema.yas.yaml",
    "test:debug": "npx --node-options=\"--inspect-brk\" jest --detectOpenHandles",
    "doc": "node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts scenes/guide.yas.yaml && yarn schema",
    "prebuild": "yarn clean",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "node bin/tsconfig && node bin/update_package",
    "clean": "rm -rf dist",
    "prenewtag": "yarn test && yarn build",
    "newtag": "node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts ./scenes/version.yas.yaml",
    "postnewtag": "yarn clean",
    "docker": "npx yaml-scene scenes/docker.yas.yaml",
    "docker:clean": "docker builder prune",
    "docker:build": "docker buildx build --build-arg=version=$version --force-rm --no-cache --platform linux/arm64,linux/amd64 -t doanthuanthanh88/yaml-scene:latest -t doanthuanthanh88/yaml-scene:$version .",
    "docker:pub": "docker buildx build --build-arg=version=$version --push --force-rm --no-cache --platform linux/arm64,linux/amd64 -t doanthuanthanh88/yaml-scene:latest -t doanthuanthanh88/yaml-scene:$version ."
  },
  "dependencies": {
    "chai": "^4.3.3",
    "chalk": "^2.4.2",
    "cli-progress": "^3.9.1",
    "commander": "8.0.0",
    "csv-parse": "^4.16.3",
    "csv-stringify": "^5.6.5",
    "js-yaml": "^3.12.2",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "lodash.omit": "^4.5.0",
    "loglevel": "^1.8.0",
    "prompts": "^2.4.0",
    "to-json-schema": "^0.2.5",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/cli-progress": "^3.9.2",
    "@types/csv-parse": "^1.2.2",
    "@types/csv-stringify": "^3.1.0",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^14.14.6",
    "@types/prompts": "^2.0.14",
    "@types/to-json-schema": "^0.2.0",
    "@types/xml2js": "^0.4.9",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "homepage": "https://github.com/doanthuanthanh88",
  "author": {
    "name": "Đoàn Thuận Thành",
    "email": "doanthuanthanh88@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/doanthuanthanh88/yaml-scene"
  },
  "bugs": {
    "url": "https://github.com/doanthuanthanh88/yaml-scene/issues",
    "email": "doanthuanthanh88@gmail.com"
  }
}
