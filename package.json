{
  "name": "yaml-scene",
  "version": "1.0.0-rc.1",
  "description": "Do everything with yaml scenario file",
  "keywords": [
    "tool",
    "api",
    "scenario",
    "test",
    "rest",
    "debug",
    "dev"
  ],
  "main": "src",
  "bin": {
    "yas": "./bin/cli.js",
    "yaml-scene": "./bin/cli.js"
  },
  "scripts": {
    "install:dist": "yarn install --production --modules-folder ./dist/node_modules",
    "dev": "npx nodemon --watch src --watch test --ext .ts --exec 'node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js --inspect-brk src/index.ts --env-file 'yaml-test/.env' yaml-test/index.yaml'",
    "start": "npx nodemon --watch src --watch test --ext .ts --exec 'node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts --env-file 'yaml-test/.env' yaml-test/index.yaml'",
    "test": "npx jest --detectOpenHandles",
    "test:debug": "npx --node-options=\"--inspect-brk\" jest --detectOpenHandles",
    "doc": "node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts 'yaml-test/examples/document/doc_guide.yaml'",
    "prebuild": "yarn clean",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "node bin/tsconfig && node bin/update_package",
    "clean": "rm -rf dist",
    "prenewtag": "yarn test && yarn build",
    "newtag": "node -r ts-node/register -r ./bin/tsconfig-paths-bootstrap.js src/index.ts ./scenes/version.yaml",
    "postnewtag": "yarn clean"
  },
  "dependencies": {
    "@koa/cors": "^3.2.0",
    "@koa/router": "^10.1.1",
    "axios": "^0.24.0",
    "chai": "^4.3.3",
    "chalk": "^2.4.2",
    "cli-progress": "^3.9.1",
    "commander": "8.0.0",
    "csv-parse": "^4.16.3",
    "csv-stringify": "^5.6.5",
    "curl-generator": "^0.1.0",
    "form-data": "^4.0.0",
    "js-yaml": "^3.12.2",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.11",
    "loglevel": "^1.8.0",
    "prompts": "^2.4.0",
    "to-json-schema": "^0.2.5",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/cli-progress": "^3.9.2",
    "@types/csv-parse": "^1.2.2",
    "@types/csv-stringify": "^3.1.0",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^3.12.1",
    "@types/koa": "^2.13.4",
    "@types/lodash": "^4.14.122",
    "@types/node": "^14.14.6",
    "@types/prompts": "^2.0.14",
    "@types/to-json-schema": "^0.2.0",
    "@types/xml2js": "^0.4.9",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "optionalDependencies": {},
  "homepage": "https://github.com/doanthuanthanh88",
